.TitleBar
  = link_to root_path,{class:"TitleBar__title"} do
    = image_tag 'logo/tea_logo2.png', alt: 'logo', height: '50', width: '50', class: 'TitleBar__title--icon'
    .TitleBar__title--text Tea'oclock
  .TitleBar__nav
    - unless user_signed_in?
      = link_to "ログイン", new_user_session_path, class: "TitleBar__nav--btn"
      = link_to "新規登録", new_user_registration_path, class: "TitleBar__nav--btn"
    - else
      .IconWrapper
        = icon("far", "user-circle")
        .IconWrapper__nickname= current_user.nickname


.Balloon
  = link_to "マイページ", my_teas_path, class: "Balloon__link"
  = link_to "紅茶を登録", new_my_tea_path, class: "Balloon__link"
  = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "Balloon__link"
