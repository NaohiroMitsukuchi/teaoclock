.RegistrationPage
  .TitleBar
    .TitleBar__title
      = image_tag 'logo/tea_logo2.png', alt: 'logo', height: '50', width: '50', class: 'TitleBar__title--icon'
      .TitleBar__title--text Tea'oclock
    %h1 - 新規登録 -
  .FormArea
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "users/shared/error_messages", resource: resource
      .FormItem
        %dl
          %dt.FormItem__label
            = f.label :nickname, "ニックネーム"
          %dd.FormItem__detail
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname",placeholder: "例）紅茶太郎"
      .FormItem
        %dl
          %dt.FormItem__label
            = f.label :email, "メールアドレス"
          %dd.FormItem__detail
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
      .FormItem
        %dl
          %dt.FormItem__label
            = f.label :password, "パスワード"
            - if @minimum_password_length
              %em
                (#{@minimum_password_length}文字以上)

          %dd.FormItem__detail
            = f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字"
      .FormItem
        %dl
          %dt.FormItem__label
            = f.label :password_confirmation, "パスワード再確認"
          %dd.FormItem__detail
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数字"
      .FormItem
        .FormItem__btn
          = f.submit "登録する"
